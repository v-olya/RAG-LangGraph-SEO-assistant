{
	"servers": {
		"com.supabase/mcp": {
			"type": "stdio",
			"command": "npx",
			"args": [
			"--yes",
			"@supabase/mcp-server-supabase@0.6.2",
				"--project-ref",
				"${input:project-ref}",
				"--api-url",
				"${input:api-url}"
			],
			"env": {
				"SUPABASE_ACCESS_TOKEN": "${input:SUPABASE_ACCESS_TOKEN}"
			}
		}
	},
	"inputs": [
		{
			"id": "project-ref",
			"type": "promptString",
			"description": "Supabase project reference ID",
			"password": false,
			"default": "default"
		},
		{
			"id": "read-only",
			"type": "pickString",
			"description": "Enable read-only mode",
			"options": ["false", "true"],
			"default": "false"
		},
		{
			"id": "features",
			"type": "promptString",
			"description": "Comma-separated list of features to enable",
			"password": false,
			"default": ""
		},
		{
			"id": "api-url",
			"type": "promptString",
			"description": "Custom API URL",
			"password": false,
			"default": "http://127.0.0.1:54321"
		},
		{
			"id": "SUPABASE_ACCESS_TOKEN",
			"type": "promptString",
			"description": "Personal access token for Supabase API",
			"password": true,
			"default": "${env:SUPABASE_ACCESS_TOKEN}"
		}
	]
}